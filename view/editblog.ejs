<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("../partials/link") %>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/addblog.css">
  <title>Edit Blog</title>
</head>
<body>
  <%- include("../partials/nav") %>

  <div class="form-container">
    <h1 class="form-title">Edit Blog</h1>

    <form action="/blog/edit/<%= blog._id %>" method="post" enctype="multipart/form-data">
      
      <!-- Cover Image -->
      <div class="form-group">
        <label for="coverImage" class="form-label">Cover Image</label>
        <input type="file" id="coverImage" name="coverImage" class="form-file">
        <% if(blog.coverImageURL) { %>
          <img src="<%= blog.coverImageURL %>" alt="Current Cover" class="cover-preview">
        <% } %>
      </div>

      <!-- Title -->
      <div class="form-group">
        <label for="title" class="form-label">Title</label>
        <input type="text" id="title" name="title"  class="form-input" value="<%= blog.title %>">
      </div>

      <!-- Body -->
      <div class="form-group">
        <label for="body" class="form-label">Body</label>
        <textarea id="body" name="body"  class="form-textarea"><%= blog.body %></textarea>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="btn-submit">Update Blog</button>
    </form>
  </div>

  <%- include("../partials/script") %>
</body>
</html>
